<nav>
  <%= link_to 'All Shelters', '/shelters' %>
  <%= link_to 'Available Pets', '/pets' %>
</nav>
<form action="/shelters" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p> Enter a new shelter:</p>
  <p>Shelter Name:</p><input type='text' name='shelter[name]'/><br/>
  <p>Street Address:</p><input type='text' name='shelter[address]'/><br/>
  <p>City:</p><input type='text' name='shelter[city]'/><br/>
  <p>State:</p><input type='text' name='shelter[state]'/><br/>
  <p>Zip Code:</p><input type='text' name='shelter[zip]'/><br/>
  <input type='submit' value='Create Shelter'/>
</form>
