<nav>
  <%= link_to 'All Shelters', '/shelters' %>
  <%= link_to 'Available Pets', '/pets' %>
</nav>
<h1> Shelters </h1>
<% @shelters.each do |shelter| %>
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></h3>
  <h3><a href="/shelters/<%= shelter.id %>/edit">Edit Info for <%= shelter.name %></h3>
  <%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
<% end %>
<a href="/shelters/new">Add a Shelter</a>
