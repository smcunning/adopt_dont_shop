<nav>
  <%= link_to 'All Shelters', '/shelters' %>
  <%= link_to 'Available Pets', '/pets' %>
</nav>
<h1><%= @shelter.name %></h1>
<p><%= @shelter.address %><br/>
<%= @shelter.city %>, <%= @shelter.state %> <%= @shelter.zip %></p>
<%= link_to "See Our Pets", "/shelters/#{ @shelter.id }/pets" %>
<%= link_to "Update Shelter", "/shelters/#{@shelter.id}/edit" %>

<%= link_to "Delete Shelter", "/shelters/#{@shelter.id}", method: :delete %>

<%= link_to "Add a Review", "/shelters/#{@shelter.id}/reviews/new" %>

<% @shelter.reviews.each do |review| %>
<p> <%= review.title %><br>
  <%= image_tag(review.image) %><br>
  Rating: <%= review.rating %><br>
  <%= review.content %><br>
  <%= review.user.name %><br>
  <%= link_to "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit" %>

</p>
<% end %>
